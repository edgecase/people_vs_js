@import '_mixins';
@import '_prettify';

@css {
  @font-face {
      font-family: 'InconsolataMedium';
      src: url('/fonts/Inconsolata-webfont.eot');
      src: url('/fonts/Inconsolata-webfont.eot?#iefix') format('embedded-opentype'),
           url('/fonts/Inconsolata-webfont.woff') format('woff'),
           url('/fonts/Inconsolata-webfont.ttf') format('truetype'),
           url('/fonts/Inconsolata-webfont.svg#InconsolataMedium') format('svg');
      font-weight: normal;
      font-style: normal;

  }
}

* { margin: 0; padding: 0; }
body { font: 16px Helvetica, Arial, sans-serif; }

#container {
  overflow : hidden;
  position : absolute;
  top      : 0;
  right    : 0;
  bottom   : 0;
  left     : 0;
}

input[type=text] {  standard_field_bedazzle() }
input[type=text]:focus {  standard_field_focus() }


/* Flash Messages
-------------------------------------------- */

.msg {
  margin    : 0 0 10px 0;
  padding   : 4px 0 4px 0;
  color     : #333;
  font-size : 14px;
}

.msg.error {
  padding-left : 30px;
  color        : #d00;
  background   : url(/images/attention_error.png) no-repeat 0 50%;
}

.msg.success {
  color        : #539000;
  padding-left : 30px;
  background   : url(/images/attention_success.png) no-repeat 0 50%;
}


/* Participants
-------------------------------------------- */

#user_list {
  overflow     : auto;
  position     : absolute;
  top          : 0;
  bottom       : 0;
  left         : 0;
  width        : 220px;
  border-right : 1px solid #c3c3c3;
  padding-top  : 1px;
  background   : #e3e8ec;
  cursor       : default;
   user_select(none);
}

#user_list li {
  height        : 30px;
  border-top    : 1px solid #f8f8f8;
  border-bottom : 1px solid #ccd0d4;
  padding-left  : 38px;
  color         : #444;
  font-size     : 14px;
  line-height   : 30px;
  text-shadow   : 0 1px 0 #fff;
  background    : url(/images/waiting.png) no-repeat 12px 50%;
   overflow_ellipsis();
}

#user_list :first-child { border-top: 0; }
#user_list :last-child  { border-bottom: 0; }
#user_list .correct     { background-image: url(/images/correct.png); }
#user_list .incorrect   { background-image: url(/images/incorrect.png); }
#user_list .you         { color: #000; font-weight: bold; }
#user_list .you span    { font-weight: normal; }


/* Header
-------------------------------------------- */

#header {
  position      : absolute;
  top           : 0;
  right         : 0;
  left          : 221px;
  height        : 46px;
  border-bottom : 1px solid #c3c3c3;
  background    : url(/images/header_background.png);
  z-index       : 1;
   box_shadow(0 1px 2px rgba(0, 0, 0, 0.1));
   user_select(none);
}

#header_left {
  position   : absolute;
  top        : 0;
  right      : 50%;
  bottom     : 0;
  left       : 0;
  background : url(/images/Q.png) no-repeat 12px 50%;
}

.progress_bar {
  position   : absolute;
  top        : 10px;
  right      : 10px;
  left       : 50px;
  height     : 20px;
  padding    : 2px;
  background : #fff;
   border_radius(14px);
   user_select(none);
   linear_gradient(#e9e9e9, #ffffff);
   box_shadow(inset 0 1px 0 rgba(0,0,0, 0.1));

  .bar {
    height : 20px;
    width  : 0;
     linear_gradient(#dddddd, #bbbbbb);
     border_radius(10px);
  }

  .text {
    position    : absolute;
    top         : 0;
    right       : 0;
    bottom      : 0;
    left        : 0;
    color       : #333;
    font-size   : 15px;
    font-weight : bold;
    line-height : 24px;
    text-align  : center;
    text-shadow : 0 1px 0 rgba(255,255,255, 0.75);
  }
}

/* Panels
-------------------------------------------- */

#panel_container {
  position : absolute;
  top      : 0;
  right    : 0;
  bottom   : 0;
  left     : 221px;
  z-index  : 0;
}

.panel {
  overflow     : auto;
  position     : absolute;
  top          : 0;
  bottom       : 0;
}

#left_panel {
  left         : 0;
  right        : 50%;
  border-right : 1px solid #c3c3c3;
  padding      : 20px 12px 0 12px;
  background   : #fff;
  z-index      : 1;
}

#right_panel {
  right      : 0;
  bottom     : 0;
  left       : 50%;
  background : #f8f8f8;
}


/* Credits
-------------------------------------------- */

#credits, #question_nav {
  position    : absolute;
  right       : 0;
  bottom      : 0;
  left        : 0;
  height      : 38px;
  line-height : 38px;
  text-align  : center;

  a {
    margin          : 0 6px;
    color           : #c3c3c3;
    font-size       : 14px;
    font-weight     : bold;
    text-decoration : none;
  }
}

#question_nav a {
  color: #000;
}

#question_nav #presenterPrev {
  padding-left: 17px;
  background : url(/images/back.png) no-repeat 0 50%;
}

#question_nav #presenterNext {
  padding-right: 17px;
  background : url(/images/next.png) no-repeat 100% 50%;
}

#question_nav #presenterResetQuiz {
  margin-left : 20px;
  color       : #555;
  font-weight : normal;
}


/* Final Answer Submit Button
-------------------------------------------- */

#final_answer_container {
  position      : absolute;
  right         : 0;
  bottom        : 38px;
  left          : 0;
  height        : 49px;
  border-top    : 1px solid #c3c3c3;
  border-bottom : 1px solid #c3c3c3;
  text-align    : center;
  background    : url(/images/final_answer_container_background.png);
}

#final_answer {
  display : block;
  margin  : 7px 30px 0 30px;
   standard_button_bedazzle();

  &.disabled {
    cursor: default;
     opacity(0.5);
  }

  &.enabled:active {
     standard_button_bedazzle_active();
  }
}



/* Welcome
-------------------------------------------- */

#welcome_panel {
  position    : absolute;
  top         : 0;
  right       : 0;
  bottom      : 0;
  left        : 0;
  padding-top : 90px;
  color       : #888;
  text-align  : center;
  z-index     : 100;
  background-color: white;

  h1 {
    font-size   : 21px;
    font-weight : normal;
  }

  label {
    font-size   : 27px;
    font-weight : bold;
  }

  input {
    display       : inline-block;
    margin-bottom : 10px;
    width         : 250px;
  }
}

#welcome_panel #name {
  width     : 240px;
  padding   : 8px 0 8px 10px;
  font-size : 14px;
   standard_field_bedazzle();
}

#welcome_panel #name:focus {
   standard_field_focus();
}

#welcome_panel #name_button {
  font-size: 18px;
   standard_button_bedazzle();
   linear_gradient(#8cd2f7, #59b8f4);
  color: #2b5980;
  border-color: #448ccd;
}

#welcome_panel #name_button.enabled:active {
  background: #409fdb; /* Old browsers */
  background: -moz-linear-gradient(top, #409fdb 0%, #59b8f4 12%, #59b8f4 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#409fdb), color-stop(12%,#59b8f4), color-stop(100%,#59b8f4)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, #409fdb 0%,#59b8f4 12%,#59b8f4 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, #409fdb 0%,#59b8f4 12%,#59b8f4 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, #409fdb 0%,#59b8f4 12%,#59b8f4 100%); /* IE10+ */
  background: linear-gradient(top, #409fdb 0%,#59b8f4 12%,#59b8f4 100%); /* W3C */
  //filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#409fdb', endColorstr='#59b8f4',GradientType=0 ); /* IE6-9 */
}

#welcome_panel #name_button.disabled {
  opacity(0.5);
  cursor  : default;
}



/* Please Wait
-------------------------------------------- */

#please_wait {
  position    : absolute;
  top         : 0;
  right       : 0;
  bottom      : 0;
  left        : 0;
  color       : #bbb;
  font-size   : 24px;
  font-weight : bold;
  line-height : 90px;
  text-align  : center;
  background  : url(/images/dancing.gif) no-repeat 50% 50%;
}



/* Answer Pad
-------------------------------------------- */

#answer_pad {
  overflow : auto;
  position : absolute;
  top      : 0;
  right    : 0;
  bottom   : 0;
  left     : 0;

  .questionContainer {
    overflow : auto;
    position : absolute;
    top      : 0;
    right    : 0;
    bottom   : 90px;
    left     : 0;
  }
}

.possibleAnswers { list-style: none; }

.possibleAnswer {
  overflow      : hidden;
  position      : relative;
  border-bottom : 1px solid #ddd;
  padding       : 12px;

  &.active  { background: #eee; }
  &.correct { background: #8CDD81; }
  &.incorrect { background: #d00; }
}

.percentOfThisAnswer {
  position    : absolute;
  top         : 0;
  right       : 0;
  bottom      : 0;
  width       : 50px;
  padding     : 12px 12px 0 0;
  color       : #7a7a7a;
  font-size   : 16px;
  font-weight : bold;
  text-align  : right;
}



/* Discussion Pad
-------------------------------------------- */

#discussion_container {
  overflow : auto;
  position : absolute;
  top      : 0;
  right    : 0;
  bottom   : 0;
  left     : 0;
}

#discussion_enter {
  position      : absolute;
  top           : 0;
  right         : 0;
  left          : 0;
  height        : 150px;
  border-bottom : 1px solid #ccc;
  background    : #eee;
}

#textarea_container {
  position      : absolute;
  top           : 10px;
  right         : 10px;
  left          : 10px;
  bottom        : 34px;
  padding       : 5px;
  background    : #fff;
   standard_field_bedazzle();
}

#textarea_container.focus {
   standard_field_focus();
}

#discussion_enter textarea {
  width      : 100%;
  height     : 100%;
  border     : 0;
  background : none;
  resize     : none;
  outline    : none;
}

#submit_discussion {
  position : absolute;
  bottom   : 7px;
  left     : 12px;
   standard_button_bedazzle();
  padding  : 3px 20px;
}

#submit_discussion:active {
   standard_button_bedazzle_active();
}

/* Questions
-------------------------------------------- */

.questionContainer p {
  font-size     : 16px;
  margin-bottom : 1em;
}

.linenums li {
  padding     : 3px 0 3px 2px;
  color       : #777;
  font-family : 'InconsolataMedium', 'courier new', courier, monospace;
  margin-left : 1.5em;
}

#discussion_area {
  overflow    : auto;
  position    : absolute;
  top         : 151px;
  right       : 10px;
  bottom      : 0;
  left        : 10px;
  padding-top : 10px;
}

#discussion_items{
  width: 100%;

  td {
    padding   : 2px 10px 2px 0;
    font-size : 12px;
  }

  .user {
    width            : 105px;
    padding-right    : 10px;
    background-color : #eee;
    text-align       : right;
    vertical-align   : top;
  }

  .linenums { margin-left: 1.6em; }

  .forMe { background-color: #F5E5B0; }
}


/* Finished
-------------------------------------------- */

#finished {
  position   : absolute;
  top        : 0;
  right      : 0;
  bottom     : 0;
  left       : 0;
  padding    : 15px;
  text-align : center;
  background : url(/images/dancing.gif) no-repeat 50% 100%;

  h1 {
    margin         : 15px 0 0.25em 0;
    color          : #d00;
    font-size      : 72px;
    letter-spacing : -0.025em;
  }

  h2 {
    color       : #6b6b6b;
    font-size   : 24px;
    font-weight : normal;
  }
}
